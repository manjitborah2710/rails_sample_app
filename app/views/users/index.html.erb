<% provide(:title, 'All users') %>
<h1>All users</h1>

<ul class="users">
  <%= will_paginate @users, class:'text-center' %>
  <% @users.each do |user| %>
<!--    can be included in a partial called _user.html.erb and used with render user  -->
    <li>
      <%= gravatar_for user, size: 50 %>
      <%= link_to user.name, user %>
      <% if current_user.admin? && !current_user.eql?(user) %>
         <%= link_to "delete", user, method: :delete,data: { confirm: "You sure?" } %>
      <% end %>
    </li>
  <% end %>

  <%= will_paginate @users, class:'text-center' %>
</ul>